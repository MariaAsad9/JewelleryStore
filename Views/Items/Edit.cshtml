@model JewelleryStore.Models.Item

@{
    ViewData["Title"] = "Edit";
}

<style>
    /* Custom styles */
    .form-control {
        border-radius: 20px; /* Rounded corners */
    }

    .btn {
        border-radius: 20px; /* Rounded corners for buttons */
    }

    /* Form container styling */
    .card {
        background-color: #f8f9fa; /* Light gray background */
        padding: 20px;
        border-radius: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Shadow effect */
        margin-bottom: 30px; /* Add margin to prevent overlap with footer */
    }

    /* Form header styling */
    .card-title {
        text-align: center;
        color: #ba55d3; /* Purple color */
        font-weight: bold;
    }

    /* Form input field styling */
    .form-group label {
        font-weight: bold;
    }

    /* Submit button styling */
    .btn-primary {
        background-color: #ff69b4; /* Hot pink color */
        border-color: #ff69b4; /* Hot pink border color */
        width: 100%; /* Full-width button */
        margin-bottom: 10px; /* Add margin to separate from other elements */
        margin-top: 10px; /* Add margin above the button */
    }

        .btn-primary:hover {
            background-color: #ff1493; /* Darker pink color on hover */
            border-color: #ff1493; /* Darker pink border color on hover */
        }

    /* Back to list button styling */
    .btn-secondary {
        width: 100%; /* Full-width button */
    }
</style>

<h1 class="card-title">Edit</h1>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Adjusted column width -->
            <div class="card">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="ItemName" class="control-label">Item Name</label>
                        <input asp-for="ItemName" class="form-control" />
                        <span asp-validation-for="ItemName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Color" class="control-label">Color</label>
                        <input asp-for="Color" class="form-control" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GemstoneType" class="control-label">Gemstone Type</label>
                        <input asp-for="GemstoneType" class="form-control" />
                        <span asp-validation-for="GemstoneType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Quantity" class="control-label">Quantity</label>
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label">Price</label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                    <div class="form-group">
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
